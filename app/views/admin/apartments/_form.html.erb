<%= semantic_form_for [:admin, resource] do |f| %>
  <%= f.inputs do %>
    <%= f.input :image %>
    <%= f.input :image_sold %>
    <%= f.input :dx %>
    <%= f.input :dy %>
    <%= f.input :number %>
    <%= f.input :floor_number %>
    <%= f.input :sold_out %>
    <%= f.input :price %>
    <%= f.input :area %>

    <%= image_tag resource.image.url if resource.image.url.present? %>
  <% end %>

  <%= f.actions %>
<% end %>
